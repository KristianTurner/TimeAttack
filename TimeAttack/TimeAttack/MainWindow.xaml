<Window x:Class="TimeAttack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeAttack"
        mc:Ignorable="d"
        KeyDown="MainWindow_KeyDown"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="200,234,0,0" VerticalAlignment="Top" Width="124" Height="37" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="62,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="50" Text="{Binding Path=MyValue}"/>

    </Grid>
</Window>
